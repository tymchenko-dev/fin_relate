# Flask Environment Configuration
FLASK_ENV=development
# or: FLASK_ENV=production
# or: FLASK_ENV=testing

# Secret Key (REQUIRED - generate with: python -c "import secrets; print(secrets.token_hex(16))")
SECRET_KEY=your-secret-key-here

# Database URL
# For development (SQLite)
DATABASE_URL=sqlite:///expense_tracker.db

# For production (PostgreSQL on Render/Railway)
# DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Optional: Port for local development
PORT=5002
